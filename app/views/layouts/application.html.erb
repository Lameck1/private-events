<!DOCTYPE html>
<html>
  <head>
    <title>Private Events</title>
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body class="bg-light">

    <nav class="navbar navbar-expand-md navbar-dark bg-primary">
      <div class="container-fluid">
        <ul class="navbar-nav">
           <li class="nav-item"><%= link_to "Create Event", new_event_path, class: "nav-link text-light bg-secondary rounded-pill"%></li>
        </ul>

        <div class="mx-auto order-0">
          <%= link_to "Private Events", root_path, class: "navbar-brand"%>
        </div>

       <div class="navbar-nav">
         <ul class="navbar-nav ml-auto">
             <li class="nav-item"><%= display_login%></li>
             <li class="nav-item"><%= display_sign_up%></li>
             <li class="nav-item"><%= display_username%></li>
             <li class="nav-item"><%= display_logout%></li>
         </ul>
       </div> 
         
        
         </ul>
       </div>

      </div>
    </nav>

    <%= render partial: "layouts/flash" %>
    <%= yield %>
  </body>
</html>