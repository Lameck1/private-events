<% obj.each do |event| %>
    <div class="card mt-2 w-100">
      <div class="card-body">
        <h5 class="card-title border-bottom pb-2"><%= link_to event.title, event_path(event) %></h5>
        <p class="card-text"><%= event.description %></p>
        <p><strong>Location: </strong><small class="card-text"><%= event.location %></small></p>
        <p><strong>Date: </strong>
        <small class="card-text">
            <strong><%= event.schedule.to_s.split(' ').first %> </strong>
            <em><%= event.schedule.to_s.split(' ')[1] %></em>
        </small>
        </p>
      </div>
      <div class="attendance my-2 border-top mx-4">
        <%= display_host_info(event) %>
        <%= display_going_button(event) %>
        <%= display_going_msg(event) %>
      </div>
    </div>
<% end %>