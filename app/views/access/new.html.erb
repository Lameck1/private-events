<div class="w-50 mx-auto mt-5 shadow p-3 mb-5 bg-white rounded">
  <h3>Login</h3>
  <div>
    <%= form_with url: login_path do |f| %>
      <div class="form-group">
        <%= f.label :username %>
        <%= f.text_field :username, class: "form-control" %>
      </div>
      <%= f.submit "Log In", class: "btn btn-primary" %>
    <%end%>
  </div>
</div>